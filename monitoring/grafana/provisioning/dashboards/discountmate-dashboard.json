{
  "uid": "dm-main",
  "title": "DiscountMate - Service Overview",
  "tags": ["discountmate", "ops"],
  "schemaVersion": 39,
  "version": 1,
  "refresh": "10s",
  "time": { "from": "now-6h", "to": "now" },
  "templating": {
    "list": [
      {
        "name": "datasource",
        "type": "datasource",
        "query": "prometheus",
        "current": { "text": "Prometheus", "value": "Prometheus" }
      }
    ]
  },
  "panels": [
    {
      "id": 1,
      "type": "timeseries",
      "title": "Average request latency (s)",
      "datasource": "$datasource",
      "gridPos": { "h": 8, "w": 24, "x": 0, "y": 0 },
      "fieldConfig": { "defaults": { "unit": "s" }, "overrides": [] },
      "options": { "legend": { "displayMode": "table", "placement": "bottom" } },
      "targets": [
        {
          "refId": "A",
          "expr": "rate(dm_request_duration_seconds_sum[1m]) / rate(dm_request_duration_seconds_count[1m])",
          "legendFormat": "avg latency"
        }
      ]
    },
    {
      "id": 2,
      "type": "timeseries",
      "title": "Request volume (5m increase)",
      "datasource": "$datasource",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 8 },
      "fieldConfig": { "defaults": { "unit": "req" }, "overrides": [] },
      "options": { "legend": { "displayMode": "list", "placement": "bottom" } },
      "targets": [
        {
          "refId": "A",
          "expr": "sum(increase(dm_requests_total[5m]))",
          "legendFormat": "requests (all endpoints)"
        }
      ]
    },
    {
      "id": 3,
      "type": "timeseries",
      "title": "Errors (5m increase)",
      "datasource": "$datasource",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 8 },
      "fieldConfig": { "defaults": { "unit": "errors" }, "overrides": [] },
      "options": { "legend": { "displayMode": "list", "placement": "bottom" } },
      "targets": [
        {
          "refId": "A",
          "expr": "increase(dm_errors_total[5m])",
          "legendFormat": "simulated errors"
        }
      ]
    }
  ],
  "annotations": { "list": [] }
}
